extends base 

block contents
    div.upload__container 
        div.upload__video
            button#startbtn start record
            video#videoframe
            if error 
                span=error
            form(method="post", enctype="multipart/form-data")
                label(for="video") upload Video 
                input(type="file", name="video", id="video", accept="video/*", required) 
                label(for="thumb") upload Thumbnail
                input(type="file", name="thumb", id="thumb", accept="image/*", required) 
                input(type="text", placeholder="title", name="title", maxlength=80)
                input(type="text", placeholder="description", name="description")
                input(type="text", placeholder="tags", name="hashtags")
                input(type="submit", value="upload video!")

block scripts 
    script(src="/static/js/recorder.js") 